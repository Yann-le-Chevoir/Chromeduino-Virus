{
  "name": "Arduino Virus",
  "description": "Create Arduino-compatible sketches on your Chromebook",
  "version": "2.0.3",
  "manifest_version": 2,
  "permissions": [
    "serial",
    "notifications",
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    },
    "storage"
  ],
  "minimum_chrome_version": "23",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  }
}